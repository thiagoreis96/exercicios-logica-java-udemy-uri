public class Vt05 {
	
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int N = sc.nextInt();
		
		int[] vet = new int[N];
		
		int soma = 0;
		int contador = 0;
		
		for (int i=0; i<N; i++) {
			vet[i] = sc.nextInt();
			if (vet[i] % 2 == 0) {
				soma += vet[i];
				contador ++;
			}
		}
		
